{
    "name": "jamoveo-backend",
    "version": "1.0.0",
    "description": "Backend for JaMoveo - A Real-time Music Rehearsal Platform",
    "main": "dist/server.js",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "nodemon src/server.ts",
        "postbuild": "cpx \"src/songs/*\" dist/songs",
        "build": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\""
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "cpx": "^1.5.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^7.0.3",
        "socket.io": "^4.6.1",
        "typescript": "^5.0.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/node": "^18.15.11",
        "@types/supertest": "^6.0.3",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^10.1.4",
        "nodemon": "^3.1.10",
        "prettier": "^3.5.3",
        "supertest": "^6.3.4",
        "ts-jest": "^29.3.4",
        "ts-node": "^10.9.1"
    }
}
